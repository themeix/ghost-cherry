{{!< default}}
<div class="main-content-area ptb-70 clearfix">
    <div class="container">
        <div class="category-post">
            <div class="row">
                <div class="col-lg-12">
                  {{#tag}}
                    <div class="tag-header-title height-200" style="background-image:url({{img_url feature_image}});background-color:#1E3046">
                      <div class="tag-info">
                          <h4>{{name}}<span>{{count.posts}}</span></h4>
                      </div>
                    </div>
                  {{/tag}}
                </div>
            </div>
            <div class="page-wrapper"> 

            <div class="row">
               {{#foreach posts}}
                <div class="col-lg-4 col-sm-6">
                    <div class="category-feature-post post-cat">
                        <a href="single-post.html"><img src="{{img_url feature_image}}" alt="{{title}}"/></a>
                        <h3><a href="{{url}}">{{title}}</a></h3>
                         <div class="post-meta mb-3">
                            <p><span><i class="far fa-clock"></i>{{date published_at format="D MMMM Y"}}</span><span class="author"><i class="far fa-user"></i>{{authors}}</span></p>
                         </div>
                        <p>{{excerpt words="25"}}</p>
                    </div>
                </div>
             {{/foreach}}
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="post-pagination">
                        {{pagination}}
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>